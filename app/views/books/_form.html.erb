  <div class='mb-2'>
    <%= form.label :DataLançamento %>
    <%= form.date_field :releaseDate %>
  </div>

  <div class='mb-2'>
    <%= form.label :Capa %>
    <%= form.text_field :Cover %>
  </div>

  <div class='mb-2'>
    <%= form.label :Editora %>
    <%= form.text_field :publishingCompany %>
  </div>

  <div class='mb-2'>
    <%= form.label :ISBN10%>
    <%= form.number_field :ISBNTen %>
  </div>
  <div class='mb-2'>
    <%= form.label :Edição %>
    <%= collection_select(:book, :edition_id, Edition.all ,:id, :number)%>
  </div>


  <div class='mb-2'>
    <%= form.label :Autor %>
    <%= form.text_field :author %>
  </div>

